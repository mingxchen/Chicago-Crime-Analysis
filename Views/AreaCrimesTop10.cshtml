@page
@model AreaCrimesTop10Model
@{
  ViewData["Title"] = "Top-10 Crimes in the Area";
}

<h2>Top-10 Crimes in the Area</h2>

@{
    if(@Model.EX == null)
    {
        <br />
        <h3>Area: "@Model.Input"</h3>
        <br />
    }
}

@{
   if (@Model.EX != null)
	 {
	   <br />
		 <br />
		 <h3>**ERROR: @Model.EX.Message</h3>
		 <br />
		 <hr />
		 <br />
		 <br />
	 }
}

<table class="table">  
    <thead>  
        <tr>  
            <th>  
                Rank
            </th>  
            <th>  
                IUCR
            </th>  
            <th>  
                PrimaryDesc 
            </th>  
            <th>  
                SecondaryDesc
            </th>  
            <th>  
                NumOccur
            </th>
            <th>
                Crime %
            </th>
            <th>
                Arrested %
            </th>  
        </tr>  
    </thead>  
    <tbody>  
				@{
				   int rank = 1;
				 }
				
        @foreach (var item in Model.CrimeList)  
        {  
            <tr>  
                <td>  
										@rank
                </td>  
                <td>  
                    @item.IUCR
                </td>  
                <td>  
                    @item.PrimaryDesc
                </td>  
                <td>  
                    @item.SecondaryDesc
                </td>  
                <td>  
                    @item.NumOccur
                </td>
                <td>
                    @item.CrimePer
                </td>
                <td>
                    @item.ArrestedPer
                </td>  
            </tr>  
						
						rank++;
        }  
    </tbody>  
</table> 