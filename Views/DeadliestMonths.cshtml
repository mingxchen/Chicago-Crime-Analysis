@page
@model DeadliestMonthsModel
@{
  ViewData["Title"] = "Deadliest Month Ranking";
}

<h2>Deadliest Month Ranking</h2>  

@{
   if (@Model.EX != null)
	 {
	   <br />
		 <br />
		 <h3>**ERROR: @Model.EX.Message</h3>
		 <br />
		 <hr />
		 <br />
		 <br />
	 }
}

<table class="table">  
    <thead>  
        <tr>  
            <th>  
                Rank
            </th>  
            <th>  
                Month
            </th>  
            <th>  
                Deaths
            </th>  
            <th>  
                Homicide %
            </th>  
        </tr>  
    </thead>  
    <tbody>  
				@{
				   int rank = 1;
				 }
				
        @foreach (var item in Model.CrimeList)  
        {  
            <tr>  
                <td>  
										@rank
                </td>  
                <td>  
                    @item.Month
                </td>  
                <td>  
                    @item.NumOccur
                </td>  
                <td>  
                    @item.CrimePer
                </td>  
            </tr>  
						
						rank++;
        }  
    </tbody>  
</table> 